<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   app:cardCornerRadius="5dp"

    tools:context=".popupwindow">


       <RelativeLayout
           android:layout_width="150dp"
           android:layout_height="match_parent">

           <GridLayout
               android:layout_width="150dp"
               android:layout_height="wrap_content"

               android:columnCount="2"
               android:rowCount="2">

               <ImageButton
                   android:id="@+id/privatechatbtn"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_row="0"
                   android:layout_column="0"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="18dp"
                   android:layout_marginRight="8dp"
                   android:src="@drawable/privatechat" />

               <TextView
                   android:layout_row="0"
                   android:layout_column="0"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="50dp"
                   android:layout_marginRight="4dp"
                   android:layout_marginBottom="20dp"
                   android:text="Private chat"
                   android:textSize="10dp" />

               <ImageButton
                   android:id="@+id/BroupChat"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_row="0"
                   android:layout_column="1"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="18dp"
                   android:layout_marginRight="8dp"
                   android:src="@drawable/groupchat" />

               <TextView
                   android:layout_row="0"
                   android:layout_column="1"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="50dp"
                   android:layout_marginRight="4dp"
                   android:layout_marginBottom="20dp"
                   android:text="Private chat"
                   android:textSize="10dp" />

               <ImageButton
                   android:id="@+id/ParticipantsBtn"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_row="1"
                   android:layout_column="0"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="8dp"
                   android:layout_marginBottom="20dp"

                   android:src="@drawable/participents2" />

               <TextView
                   android:layout_row="1"
                   android:layout_column="0"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="40dp"
                   android:layout_marginRight="4dp"
                   android:layout_marginBottom="20dp"
                   android:text="Participants"
                   android:textSize="10dp" />

               <ImageButton
                   android:id="@+id/ScreenShareBtn"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_row="1"
                   android:layout_column="1"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="8dp"
                   android:layout_marginBottom="20dp"

                   android:src="@drawable/screenshare" />

               <TextView
                   android:layout_row="1"
                   android:layout_column="1"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="40dp"
                   android:layout_marginRight="4dp"
                   android:layout_marginBottom="20dp"
                   android:text="Screen share"
                   android:textSize="10dp" />


           </GridLayout>


       </RelativeLayout>

</androidx.cardview.widget.CardView>
