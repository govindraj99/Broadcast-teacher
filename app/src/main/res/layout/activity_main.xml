<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_margin="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_iamgeview"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src = "@drawable/baseline_arrow_back"/>
<!--    <ImageView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/imgageview_1"-->
<!--        android:layout_marginStart="28dp"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/back_iamgeview"-->
<!--        app:layout_constraintStart_toEndOf="@id/back_iamgeview"-->
<!--        app:layout_constraintTop_toTopOf="@id/back_iamgeview"-->
<!--        android:src=""-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="Group chat"
        android:textColor="#191919"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <!--        app:layout_constraintStart_toEndOf="@+id/contact_iv" />-->


    <ImageView
        android:id="@+id/contact_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/times_tv1"
        app:srcCompat="@drawable/girl1" />

    <TextView
        android:id="@+id/times_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="24dp"
        android:text="08:00 PM"
        android:textColor="#AEAEAE"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/cardview1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contact_imageView"
        app:layout_constraintTop_toBottomOf="@+id/cardvew2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/contact_imageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"

        android:layout_marginTop="260dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/times_tv2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/girl1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardvew2"
        android:layout_width="322dp"
        android:layout_height="85dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:text="Sed faucibus turpis in eu mi bibendum neque. Mauris rhoncus aenean vel elit scelerisque mauris pellentesque. Sapien eget mi proin sed libero enim. Orci porta non pulvinar neque laoreet suspendisse ."
                android:textColor="#191919"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/times_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"

        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="13dp"
        android:text="07:30 PM"
        android:textColor="#AEAEAE"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toStartOf="@+id/contact_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="290dp"
        android:layout_height="153dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="46dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardvew2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="264dp"
                android:layout_marginBottom="6dp"
                android:text="You"
                android:textColor="#636363"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/chat1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/chat1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chat1"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"


                android:layout_marginEnd="12dp"
                android:layout_marginBottom="18dp"
                android:gravity="start"
                android:text="Tempus imperdiet nulla malesuada pellentesque elit. Faucibus pulvinar elementum integer enim neque volutpat ac"
                android:textColor="#191919"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/times_tv1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview3"
        android:layout_width="279dp"
        android:layout_height="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="79dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:text="Lacus sed turpis tincidunt id aliquet risus feugiat in. Sit amet tellus cras adipiscing enim eu turpis."
                android:textColor="#191919"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="383dp"
        android:layout_height="165dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/editText"
            android:layout_width="383dp"
            android:layout_height="165dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:hint=""
            android:inputType="textAutoComplete" />

        <ImageView
            android:id="@+id/imageButton1"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:layout_alignParentRight="true"
            android:layout_marginTop="121dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"

            android:src="@drawable/submitarrow" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignStart="@+id/editText"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="218dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/screenshot" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>