<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".popupwindow">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="170dp"
                android:layout_height="144dp"
                android:columnCount="2"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/privatechatbtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="8pt"
                    android:layout_marginTop="5pt"
                    android:layout_marginRight="8pt"
                    android:src="@drawable/privatechat" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="5pt"
                    android:layout_marginTop="18pt"
                    android:layout_marginRight="4pt"
                    android:layout_marginBottom="5pt"
                    android:text="Private chat"
                    android:textSize="10dp" />

                <ImageButton
                    android:id="@+id/groupchatbtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginLeft="8pt"
                    android:layout_marginTop="5pt"
                    android:layout_marginRight="8pt"
                    android:src="@drawable/groupchat" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginLeft="5pt"
                    android:layout_marginTop="18pt"
                    android:layout_marginRight="4pt"
                    android:layout_marginBottom="5pt"
                    android:text="Group chat"
                    android:textSize="10dp" />

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginLeft="8pt"
                    android:layout_marginTop="5pt"
                    android:layout_marginRight="8pt"
                    android:src="@drawable/participents2" />

                <TextView
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginLeft="5pt"
                    android:layout_marginTop="18pt"
                    android:layout_marginRight="4pt"
                    android:layout_marginBottom="5dp"
                    android:text="Private chat"
                    android:textSize="10dp" />

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginLeft="8pt"
                    android:layout_marginTop="5pt"
                    android:layout_marginRight="8pt"
                    android:src="@drawable/screenshare" />

                <TextView
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginLeft="5pt"
                    android:layout_marginTop="18pt"
                    android:layout_marginRight="4pt"
                    android:layout_marginBottom="5pt"
                    android:text="Private chat"
                    android:textSize="10dp" />

            </GridLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>